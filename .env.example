# Gemini API Key for "Ask Beau" feature
# Get your free key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Resend API Key for contact form emails
# Get your key at: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Google Analytics 4 Measurement ID
# Get your ID at: https://analytics.google.com (Admin > Data Streams > Web)
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_measurement_id_here

# ============================================
# SYSTEM_LOGS Blog Module
# ============================================

# Contentful CMS
# Get your keys at: https://app.contentful.com > Settings > API keys
CONTENTFUL_SPACE_ID=your_space_id
CONTENTFUL_ACCESS_TOKEN=your_delivery_token
CONTENTFUL_PREVIEW_TOKEN=your_preview_token
CONTENTFUL_MANAGEMENT_TOKEN=your_management_token

# Supabase Database
# Get your keys at: https://supabase.com/dashboard > Project Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# NextAuth.js Authentication
# Generate secret: openssl rand -base64 32
NEXTAUTH_URL=https://beaudawson.com
NEXTAUTH_SECRET=your_generated_secret

# Google OAuth (for admin access)
# Get your credentials at: https://console.cloud.google.com > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
